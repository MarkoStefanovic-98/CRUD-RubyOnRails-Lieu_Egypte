
<div class="container">
<div class="row">
  <% @lieu.each do |lieu| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= lieu.NomLieu %></h4>
          <p class="card-text"><%= lieu.description %></p>
          <p class="card-text"><%= lieu.situation %></p>
          <div class="btn-group">
            <p><%= link_to 'Voir', lieu_path(lieu), class: 'btn btn-outline-primary', style: 'margin-right:5px;' %></p>
            <p><%= link_to 'Modifier', edit_lieu_path(lieu), class: 'btn btn-outline-dark', style: 'margin-right:5px;' %></p>
            <p><%= button_to 'Supprimer', lieu_path(lieu.id), method: :delete , class: "btn btn-outline-danger"%></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>